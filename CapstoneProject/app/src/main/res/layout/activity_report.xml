<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.report.ReportActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F4F4"
        android:paddingBottom="18dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Perhatian!"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins"
                    android:text="Kami harap Anda melaporkan dengan jawaban yang jujur"
                    android:textColor="#49494A" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvKtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvAlert">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Nomor KTP"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtKtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:fontFamily="@font/poppins"
                    android:textColor="#49494A" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvVictimAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvKtp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvAgeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Victim Age Value"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:inputType="number"
                    android:textColor="#49494A" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvVictimAge">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Violence Type"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rbPhysical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Kekerasan Fisik"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rbPsychological"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Kekerasan Psikis"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rbEmotional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Kekerasan Seksual"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rbSexual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Kekerasan Emosional"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvRelation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvType">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Relation Value"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgRelation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rbFamily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Family"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rbStranger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Stranger"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rbAcquaintance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Acquaintance"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAggressorAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvRelation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Aggressor Age Value"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgAggressorAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rb16Years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="&lt;16 years"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rb17Years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="16-17 years"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rb20Years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="18-20 years"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rb30Years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="21-30 years"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rb40Years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="31-40 years"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPreviousReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvAggressorAge">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Previous Abuse Report Values"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgPrevReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbPrevReportYes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Yes"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rbPrevReportNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="No"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLivingTogether"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvPreviousReport">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Living Together Values"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgLivingTogether"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbLivingTogetherYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Yes"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />

                    <RadioButton
                        android:id="@+id/rbLivingTogetherNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rb_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins_medium"
                        android:text="No"
                        android:textAlignment="center"
                        android:textColor="@color/rb_text_color" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvChronology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvLivingTogether">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Short Chronology"
                    android:textColor="#49494A"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtShortChronology"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textColor="#49494A" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rb_active_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="Kirim Laporan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/cvChronology" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>